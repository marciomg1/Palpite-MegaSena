<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guru12"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/bt1"
        android:layout_width="353dp"
        android:layout_height="160dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/megasena2"
        android:fontFamily="casual"
        android:paddingStart="22sp"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="50dp"
        android:background="?attr/actionBarItemBackground"
        android:backgroundTint="@color/black"
        android:fontFamily="casual"
        android:text="RESULTADO SORTEIO - (site da Caixa)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#E0415755"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btRes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="5dp"
        android:text="Marcio J. Melo"
        android:textColor="#24FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/tx1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="358dp"
        android:layout_height="292dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="2dp"
        android:textAlignment="center"
        android:textColor="#514C59"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_marginStart="187dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="#4DFFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRes" />

    <Button
        android:id="@+id/btRes"
        android:layout_width="264dp"
        android:layout_height="33dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:fontFamily="casual"
        android:text="meus resultados"
        android:textAlignment="center"
        android:textColor="#E0415755"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt2" />


</androidx.constraintlayout.widget.ConstraintLayout>